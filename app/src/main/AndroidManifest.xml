<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="prady.flixify">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <meta-data
        android:name="com.google.android.gms.ads.APPLICATION_ID"
        android:value="[ca-app-pub-5763895210399478~9697009976]" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <uses-library android:name="org.apache.http.legacy" android:required="false" />
        <activity
            android:screenOrientation="portrait"
            android:parentActivityName="prady.flixify.MainActivity"
            android:theme="@style/ShowTheme"
            android:name="prady.flixify.ShowHome"></activity>
        <activity
            android:screenOrientation="portrait"
            android:name="prady.flixify.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="prady.flixify.BrowserActivity" />
        <activity
            android:screenOrientation="portrait"
            android:name="prady.flixify.Splash_Screen"
            android:theme="@style/SplashSCTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="prady.flixify.Settings"
            android:parentActivityName="prady.flixify.MainActivity"
            android:theme="@style/SettingsTheme" />
        <activity
            android:theme="@style/bookmarksTH"
            android:name="prady.flixify.Bookmarks" />
        <activity
            android:screenOrientation="portrait"
            android:theme="@style/ShowTheme"
            android:name="prady.flixify.ShowHome2" />
    </application>

</manifest>